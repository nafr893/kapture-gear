{%- liquid
  assign main_heading_font = section.settings.main_heading_font
  assign sub_heading_font = section.settings.sub_heading_font
  assign title_position = 'center'

  if section.settings.title_position == 'left'
    assign title_position = 'left'
  elsif section.settings.title_position == 'right'
