<style>
           {% comment %} Custom Font Configuration Start {% endcomment %}
                      {% if section.settings.use_main_heading_font == true %}
                        {{ main_heading_font | font_face: font_display: 'swap' }}

                        .sf_{{ section.id }} h2,
                        .sf_{{ section.id }} h3,
                        .sf_{{ section.id }} h4 {
                          font-family: {{ main_heading_font.family }}, {{ main_heading_font.fallback_families }};
                          font-weight: {{ main_heading_font.weight }};
                          font-style: {{ main_heading_font.style }};
                        }
                      {% endif %}

                      {% if section.settings.use_sub_heading_font == true %}
                        {{ sub_heading_font | font_face: font_display: 'swap' }}

                        .sf_{{ section.id }} a,
                        .sf_{{ section.id }} .sf_sub_heading,
                        .sf_{{ section.id }} p {
                          font-family: {{ sub_heading_font.family }}, {{ sub_heading_font.fallback_families }};
                          font-weight: {{ sub_heading_font.weight }};
                          font-style: {{ sub_heading_font.style }};
                        }
                      {% endif %}
                     {% comment %} Custom Font Configuration Ends {% endcomment %}

                   .section-{{ section.id }}-padding {
                       padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
                     z-index: 1;
    position: relative;
                       padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
                   }

                   .sf_{{ section.id }} {
                       background-color: {{ section.settings.bg_color }};
                       {% if section.settings.enable_section_devider == true %}
                           border-top: 1px solid {{ section.settings.color_section_devider }};
                           border-bottom: 1px solid {{ section.settings.color_section_devider }};
                       {% endif %}
                   }

                   .sf_{{ section.id }} .sf-container {
                       max-width: {{ section.settings.page_width | divided_by: 10 }}rem;
                       margin: 0 auto;
                       padding-left: {{ section.settings.padding_mobile | divided_by: 10.0 }}rem;
                       padding-right: {{ section.settings.padding_mobile | divided_by: 10.0 }}rem;
                   }

                   .section-{{ section.id }}-margin {
                       margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
                       margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
                   }
                   .sf_{{ section.id }} h1,
                    .sf_{{ section.id }} h2,
                    .sf_{{ section.id }} h3,
                    .sf_{{ section.id }} h4,
                    .sf_{{ section.id }} h5 {
                      padding: 0;
                      margin: 0;
                    }

                    .sf_{{ section.id }} h2 {
                      color: {{ section.settings.text_color }};
                    }
                   .sf_{{ section.id }} h2 {
                              font-size: {{ section.settings.heading_size_mobile }}px !important;
                  }
                  .sf_{{ section.id }} p {
                          color: {{ section.settings.description_color }};
                  }

                   /** This section css **/


              .sf_{{ section.id }}  .sf_custom_button {
                   background:{{ section.settings.button_bg }};
                   color:{{ section.settings.button_text_color }};
                   border-color:{{ section.settings.button_border }};
                    display: flex;
                    width: fit-content;
                    margin: 0 auto;
                    padding: 10px 20px;
                    text-decoration: none;
                    text-transform: unset;
                    font-weight: {{ section.settings.font_weight }};
                    border-width: {{ section.settings.btn_thickness }}px;
                    border-style: solid;
                    min-height: 50px;
                    align-items: center;
                    justify-content: center;
                    border-radius: {{ section.settings.btn_radious }}px;
                    transition: all .2s cubic-bezier(.65,.05,.36,1);
                    min-width: 200px;
                }

    .sf_{{ section.id }}  .sf_custom_button:hover {
                   background:{{ section.settings.button_bg_hover }};
                   color:{{ section.settings.button_text_color_hover }};
                   border-color:{{ section.settings.button_border_hover }};
                }



 .sf_{{ section.id }}  .btn {
	max-width: fit-content;
	margin: 0 auto;
	display: flex;
}


.sf_{{ section.id }} .sf-comparison-table-tertiary {
    background-size:cover;
    background-position:center center;
    background-repeat:no-repeat
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .heading-sf{
    max-width:570px;
    width:100%;
    margin:0 auto
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .sf-benefits-body{
    display:block;
    max-width:724px;
    width:100%;
    margin:0 auto 40px;
    padding:20px 32px;
    background: {{ section.settings.table_bg }};
    line-height:normal;
    box-shadow:2px 2px 14px #00000026;
    border-radius:12px
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .sf-benefits-body .sf-benefits-body-inner{
    display:flex;
    align-items:center;
    justify-content:center;
    border-bottom:1px solid {{ section.settings.table_border }};
    padding:15px 0
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .sf-benefits-body .sf-benefits-body-inner:last-child{
    border-bottom:none
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .sf-benefits-tr{
    display:block;
    width:30%;
    text-align:center
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .sf-benefits-tr.sf-benefits-tr-big{
    display:block;
    width:40%;
    text-align:left;
    text-transform:uppercase;
    font-size:13px;
    line-height:normal;
    font-weight:500
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .sf-benefits-tr h4{
    margin-bottom:0;
    font-size:16px;
    line-height:normal;
    font-weight:600;
    display:block;
    text-align:center
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .sf-benefits-heading .sf-benefits-tr{
    padding:16px 0
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .sf-benefits-heading{
    display:flex;
    max-width:724px;
    padding:0 32px;
    width:100%;
    flex-wrap:wrap;
    margin:35px auto 0;
    align-content:center;
    justify-content:center;
    align-items:center
}
.sf_{{ section.id }} .sf-comparison-table-tertiary-content .sf-benefits-tr img{
    max-width:110px;
    width:100%;
    display:block;
    margin:0 auto;
    position:relative;
    top:-4px
}
  
                   @media (max-width: 600px) {
